<%= form_for(@club) do |f| %>
<% if @club.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@club.errors.count, t(:error), t(:save_error), :entity_name => t(:club)) %></h2>
	<ul>
		<% @club.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="well form-vertical">
	<div class="field">
		<%= f.label t(:name) %>
		<%= f.text_field :name %>
	</div>	
	
	<%= f.submit t(:submit), class: "btn-primary" %>
	
</div>
<% end %>
