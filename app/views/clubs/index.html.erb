<% provide(:title, t(:list_clubs)) %>

<div class="page-header">
	<h1><%= t(:list_clubs) %></h1>
</div>

<div class="left">
	
<table class="table table-striped table-bordered">
  <tr>
    <th><%= t(:name) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clubs.each do |club| %>
  <tr>
    <td><%= club.name %></td>
    <td><%= link_to t(:show), club %></td>
    <td><%= link_to t(:edit), edit_club_path(club) %></td>
    <td><%= link_to t(:destroy), club, confirm: t(:are_you_sure), method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
<div class="btn">
<%= link_to t(:create_new_club), new_club_path %>
</div>
</div>