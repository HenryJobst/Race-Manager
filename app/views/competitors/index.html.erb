<% provide(:title, t(:list_competitors)) %>

<h1><%= t(:list_competitors) %></h1>

<table>
  <tr>
    <th><%= t(:first_name) %></th>
    <th><%= t(:last_name) %></th>
    <th><%= t(:card_id) %></th>
    <th><%= t(:gender) %></th>
    <th><%= t(:year_of_birth) %></th>
    <th><%= t(:club) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @competitors.each do |competitor| %>
  <tr>
    <td><%= competitor.first_name %></td>
    <td><%= competitor.last_name %></td>
    <td><%= competitor.card_id %></td>
    <td><%= competitor.gender %></td>
    <td><%= competitor.year_of_birth %></td>
    <td><%= competitor.club.name if competitor.club %></td>
    <td><%= link_to t(:show), competitor %></td>
    <td><%= link_to t(:edit), edit_competitor_path(competitor) %></td>
    <td><%= link_to t(:destroy), competitor, confirm: t(:are_you_sure), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:create_new_competitor), new_competitor_path %>
