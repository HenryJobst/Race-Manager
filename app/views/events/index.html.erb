<% provide(:title, t(:list_events)) %>

<div class="page-header">
	<h1><%= t(:list_events) %></h1>
</div>

<div class="left">
	
<table class="table table-striped table-bordered">
  <tr>
    <th><%= t(:name) %></th>
    <th><%= t(:starttime) %></th>
    <th><%= t(:endtime) %></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td>	
    	<% if session[:event] == event %>
    	<%= "*" %>
		<% end %>				
    	<%= event.event_name %>
    </td>
    <td><%= event.event_begin %></td>
    <td><%= event.event_end %></td>
    <td><%= link_to t(:select), select_event_path(id: event.id_event) %></td>
    <td><%= link_to t(:show), event %></td>
    <td><%= link_to t(:edit), edit_event_path(event) %></td>
    <td><%= link_to t(:destroy), event, confirm: t(:are_you_sure), method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
<div class="btn">
<%= link_to t(:create_new_event), new_event_path %>
</div>
</div>

