<% provide(:title, 'Listing teams') %>

<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Club</th>
    <th>Event</th>
    <th>Subevent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.club.name if team.club %></td>
    <td><%= team.event.event_name %></td>
    <td><%= team.subevent.name if team.subevent %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path %>
